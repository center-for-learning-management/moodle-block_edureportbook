<div class="edureportbook_assistant_progress">
    <div class="progressbar" style="grid-template-columns: repeat(4, 1fr);">
        <div {{#progress_about}} class="active" {{/progress_about}}>
            <a href="{{{link_progress_about}}}">
                <div><span class="circle">1</span></div>
                {{#str}} assistant_stage_about, block_edureportbook {{/str}}
            </a>
        </div>
        <div {{#progress_users}} class="active" {{/progress_users}}>
            <a href="{{{link_progress_users}}}">
                <div><span class="circle">2</span></div>
                {{#str}} assistant_stage_users, block_edureportbook {{/str}}
            </a>
        </div>
        <div {{#progress_privacy}} class="active" {{/progress_privacy}}>
            <a href="{{{link_progress_privacy}}}">
                <div><span class="circle">4</span></div>
                {{#str}} assistant_stage_protection, block_edureportbook {{/str}}
            </a>
        </div>
        <div {{#progress_finish}} class="active" {{/progress_finish}}>
            <a href="{{{link_progress_finish}}}">
                <div><span class="circle">4</span></div>
                {{#str}} assistant_stage_finish, block_edureportbook {{/str}}
            </a>
        </div>
    </div>
</div>
<hr style="width: 80%; text-align:center;" />
