<div class="edureportbook_assistant_progress forums">
    {{#conditionsmet}}
        <div style="text-align: center;">
            <i class="fa fa-check" style="color: green; height: 150px;"></i>
        </div>
    {{/conditionsmet}}
    <table border="0" class="generaltable">
        <thead>
            <tr>
                <td>&nbsp;</td>
                <td>{{#str}} condition, block_edureportbook {{/str}}</td>
                <td>{{#str}} action {{/str}}</td>
            </tr>
        </thead>
        <tbody>
            <tr{{^condition_coursegroupmode}} style="color: red;"{{/condition_coursegroupmode}}>
                <td>
                    {{#condition_coursegroupmode}}
                        <i class="fa fa-check"></i>
                    {{/condition_coursegroupmode}}
                    {{^condition_coursegroupmode}}
                        <i class="fa fa-times-circle"></i>
                    {{/condition_coursegroupmode}}
                </td>
                <td>
                    <strong>{{#str}} condition_coursegroupmode, block_edureportbook {{/str}}</strong><br />
                    <i>{{#str}} condition_coursegroupmode_description, block_edureportbook {{/str}}</i>
                </td>
                <td style="text-align: center;">
                    {{#condition_coursegroupmode}}
                        -
                    {{/condition_coursegroupmode}}
                    {{^condition_coursegroupmode}}
                        <a href="{{wwwroot}}/blocks/edureportbook/assistant.php?courseid={{courseid}}&stage={{stage}}&resolve=coursegroupmode">
                            <i class="fa fa-wrench"></i>
                            {{#str}} resolve, block_edureportbook {{/str}}
                        </a>
                    {{/condition_coursegroupmode}}
                </td>
            </tr>
            <tr{{^condition_generalforum}} style="color: red;"{{/condition_generalforum}}>
                <td>
                    {{#condition_generalforum}}
                        <i class="fa fa-check"></i>
                    {{/condition_generalforum}}
                    {{^condition_generalforum}}
                        <i class="fa fa-times-circle"></i>
                    {{/condition_generalforum}}
                </td>
                <td>
                    <strong>{{#str}} condition_generalforum, block_edureportbook {{/str}}</strong><br />
                    <i>{{#str}} condition_generalforum_description, block_edureportbook {{/str}}</i><br />
                </td>
                <td style="text-align: center;">
                    {{#condition_generalforum}}
                        -
                    {{/condition_generalforum}}
                    {{^condition_generalforum}}
                    <a href="{{wwwroot}}/blocks/edureportbook/assistant.php?courseid={{courseid}}&stage={{stage}}&resolve=generalforum">
                        <i class="fa fa-wrench"></i>
                        {{#str}} resolve, block_edureportbook {{/str}}
                    </a>
                    {{/condition_generalforum}}
                </td>
            </tr>
            {{#condition_generalforums}}
                <tr{{^forcedsubscription}} style="color: red;"{{/forcedsubscription}}>
                    <td>
                        {{#forcedsubscription}}
                            <i class="fa fa-check"></i>
                        {{/forcedsubscription}}
                        {{^forcedsubscription}}
                            <i class="fa fa-times-circle"></i>
                        {{/forcedsubscription}}
                    </td>
                    <td>
                        <strong>{{#str}} condition_forcedsubscription, block_edureportbook {{/str}}</strong>
                        <a href="{{wwwroot}}/mod/forum/view.php?id={{cmid}}" target="_blank">
                            {{name}}
                        </a>
                        <br />
                        <i>{{#str}} condition_forcedsubscription_description, block_edureportbook {{/str}}</i><br />
                    </td>
                    <td style="text-align: center;">
                        {{#forcedsubscription}}
                            -
                        {{/forcedsubscription}}
                        {{^forcedsubscription}}
                        <a href="{{wwwroot}}/blocks/edureportbook/assistant.php?courseid={{courseid}}&stage={{stage}}&resolve=forcesubscribe&forumid={{id}}">
                            <i class="fa fa-wrench"></i>
                            {{#str}} resolve, block_edureportbook {{/str}}
                        </a>
                        {{/forcedsubscription}}
                    </td>
                </tr>
            {{/condition_generalforums}}
            <tr{{^condition_groupforum}} style="color: red;"{{/condition_groupforum}}>
                <td>
                    {{#condition_groupforum}}
                        <i class="fa fa-check"></i>
                    {{/condition_groupforum}}
                    {{^condition_groupforum}}
                        <i class="fa fa-times-circle"></i>
                    {{/condition_groupforum}}
                </td>
                <td>
                    <strong>{{#str}} condition_groupforum, block_edureportbook {{/str}}</strong><br />
                    <i>{{#str}} condition_groupforum_description, block_edureportbook {{/str}}</i><br />
                </td>
                <td style="text-align: center;">
                    {{#condition_groupforum}}
                        -
                    {{/condition_groupforum}}
                    {{^condition_groupforum}}
                    <a href="{{wwwroot}}/blocks/edureportbook/assistant.php?courseid={{courseid}}&stage={{stage}}&resolve=groupforum">
                        <i class="fa fa-wrench"></i>
                        {{#str}} resolve, block_edureportbook {{/str}}
                    </a>
                    {{/condition_groupforum}}
                </td>
            </tr>
            {{#condition_groupforums}}
                <tr{{^forcedsubscription}} class="alert alert-danger"{{/forcedsubscription}}>
                    <td>
                        {{#forcedsubscription}}
                            <i class="fa fa-check"></i>
                        {{/forcedsubscription}}
                        {{^forcedsubscription}}
                            <i class="fa fa-times-circle"></i>
                        {{/forcedsubscription}}
                    </td>
                    <td>
                        <strong>{{#str}} condition_forcedsubscription, block_edureportbook {{/str}}</strong>
                        <a href="{{wwwroot}}/mod/forum/view.php?id={{cmid}}" target="_blank">
                            {{name}}
                        </a>
                        <br />
                        <i>{{#str}} condition_forcedsubscription_description, block_edureportbook {{/str}}</i><br />
                    </td>
                    <td style="text-align: center;">
                        {{#forcedsubscription}}
                            -
                        {{/forcedsubscription}}
                        {{^forcedsubscription}}
                        <a href="{{wwwroot}}/blocks/edureportbook/assistant.php?courseid={{courseid}}&stage={{stage}}&resolve=forcesubscribe&forumid={{id}}">
                            <i class="fa fa-wrench"></i>
                            {{#str}} resolve, block_edureportbook {{/str}}
                        </a>
                        {{/forcedsubscription}}
                    </td>
                </tr>
            {{/condition_groupforums}}
        </tbody>
    </table>
</div>
