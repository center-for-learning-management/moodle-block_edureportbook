<div class="edureportbook_assistant_progress">
    <hr style="width: 80%; text-align:center;" />
    <div class="progressbar" style="grid-template-columns: repeat(2, 1fr);">
        <div>
            {{#backurl}}
            <a href="{{{backurl}}}" class="btn btn-primary btn-block">
                <i class="fa fa-chevron-circle-left"></i>
                {{backlabel}}
            </a>
            {{/backurl}}
        </div>
        <div>
            {{#proceedurl}}
            <a href="{{{proceedurl}}}" class="btn btn-primary btn-block">
                {{proceedlabel}}
                <i class="fa fa-chevron-circle-right"></i>
            </a>
            {{/proceedurl}}
        </div>
    </div>
</div>
